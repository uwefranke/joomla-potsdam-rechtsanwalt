<?xml version="1.0" encoding="UTF-8"?>
<extension type="template" client="site" method="upgrade">
    <name>potsdam-rechtsanwalt</name>
    <creationDate>Januar 2026</creationDate>
    <author>Uwe Franke</author>
    <authorEmail>uwe.franke@outlook.com</authorEmail>
    <authorUrl>http://www.potsdam-rechtsanwalt.de</authorUrl>
    <copyright>Copyright (C) 2026 - Alle Rechte vorbehalten</copyright>
    <license>GNU General Public License version 2 or later</license>
    <version>2.0.7</version>
    <description>TPL_POTSDAM_RECHTSANWALT_XML_DESCRIPTION</description>

    <!-- Update Server -->
    <updateservers>
        <server type="extension" name="Potsdam Rechtsanwalt Template Updates">https://raw.githubusercontent.com/uwefranke/joomla-potsdam-rechtsanwalt/main/update.xml</server>
    </updateservers>

    <!-- Haupt-Template-Datei -->
    <files>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
        <filename>error.php</filename>
        <filename>README.md</filename>
        <folder>css</folder>
        <folder>js</folder>
        <folder>images</folder>
        <folder>fonts</folder>
        <folder>language</folder>
    </files>

    <!-- Positionen fÃ¼r Module -->
    <positions>
        <position>header</position>
        <position>navigation</position>
        <position>banner</position>
        <position>sidebar-left</position>
        <position>sidebar-right</position>
        <position>main-content</position>
        <position>footer-top</position>
        <position>footer</position>
        <position>contact-info</position>
    </positions>

    <!-- Template-Parameter -->
    <config>
        <fields name="params">
            <fieldset name="basic" label="TPL_POTSDAM_RECHTSANWALT_BASIC_SETTINGS">
                <field
                    name="logo"
                    type="media"
                    label="TPL_POTSDAM_RECHTSANWALT_LOGO_LABEL"
                    description="TPL_POTSDAM_RECHTSANWALT_LOGO_DESC"
                />
            </fieldset>
            
            <fieldset name="colors" label="TPL_POTSDAM_RECHTSANWALT_COLOR_SETTINGS">
                <field
                    name="primary_color"
                    type="color"
                    default="#003d6b"
                    label="TPL_POTSDAM_RECHTSANWALT_PRIMARY_COLOR_LABEL"
                    description="TPL_POTSDAM_RECHTSANWALT_PRIMARY_COLOR_DESC"
                />
                <field
                    name="secondary_color"
                    type="color"
                    default="#b8860b"
                    label="TPL_POTSDAM_RECHTSANWALT_SECONDARY_COLOR_LABEL"
                    description="TPL_POTSDAM_RECHTSANWALT_SECONDARY_COLOR_DESC"
                />
            </fieldset>
            
            <fieldset name="contact" label="TPL_POTSDAM_RECHTSANWALT_CONTACT_SETTINGS">
                <field
                    name="phone"
                    type="tel"
                    default=""
                    label="TPL_POTSDAM_RECHTSANWALT_PHONE_LABEL"
                    description="TPL_POTSDAM_RECHTSANWALT_PHONE_DESC"
                    hint="+49 331 123456"
                />
                <field
                    name="email"
                    type="email"
                    default=""
                    label="TPL_POTSDAM_RECHTSANWALT_EMAIL_LABEL"
                    description="TPL_POTSDAM_RECHTSANWALT_EMAIL_DESC"
                    hint="kontakt@beispiel.de"
                />
                <field
                    name="address"
                    type="textarea"
                    default=""
                    label="TPL_POTSDAM_RECHTSANWALT_ADDRESS_LABEL"
                    description="TPL_POTSDAM_RECHTSANWALT_ADDRESS_DESC"
                    rows="3"
                    filter="raw"
                />
                <field
                    name="opening_hours"
                    type="textarea"
                    default=""
                    label="TPL_POTSDAM_RECHTSANWALT_OPENING_HOURS_LABEL"
                    description="TPL_POTSDAM_RECHTSANWALT_OPENING_HOURS_DESC"
                    rows="4"
                    filter="raw"
                />
            </fieldset>
            
            <fieldset name="advanced" label="TPL_POTSDAM_RECHTSANWALT_ADVANCED_SETTINGS">
                <field
                    name="show_breadcrumbs"
                    type="radio"
                    default="1"
                    label="TPL_POTSDAM_RECHTSANWALT_SHOW_BREADCRUMBS_LABEL"
                    description="TPL_POTSDAM_RECHTSANWALT_SHOW_BREADCRUMBS_DESC"
                    class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                    name="sticky_header"
                    type="radio"
                    default="1"
                    label="TPL_POTSDAM_RECHTSANWALT_STICKY_HEADER_LABEL"
                    description="TPL_POTSDAM_RECHTSANWALT_STICKY_HEADER_DESC"
                    class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                    name="smooth_scrolling"
                    type="radio"
                    default="1"
                    label="TPL_POTSDAM_RECHTSANWALT_SMOOTH_SCROLLING_LABEL"
                    description="TPL_POTSDAM_RECHTSANWALT_SMOOTH_SCROLLING_DESC"
                    class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
